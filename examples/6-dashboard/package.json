{
  "name": "shiny-react-dashboard",
  "version": "1.0.0",
  "type": "module",
  "description": "Interactive dashboard example using shiny-react and shadcn/ui",
  "scripts": {
    "build": "concurrently -c auto \"tsc --noEmit\" \"tsx build.ts\"",
    "watch": "concurrently -c auto \"tsc --noEmit --watch --preserveWatchOutput\" \"tsx build.ts --watch\"",
    "build-prod": "tsc --noEmit && tsx build.ts --production",
    "clean": "rm -rf r/www py/www build"
  },
  "author": "Winston Chang",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.1",
    "autoprefixer": "^10.4.16",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.9",
    "esbuild-plugin-tailwindcss": "^2.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@posit/shiny-react": "^0.0.6",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "recharts": "^2.8.0",
    "tailwind-merge": "^3.3.1"
  },
  "exampleMetadata": {
    "title": "Dashboard",
    "description": "Full dashboard with charts, tables, and interactive widgets",
    "deployToShinylive": true,
    "comment": ""
  }
}
