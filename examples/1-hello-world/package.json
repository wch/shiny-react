{
  "private": true,
  "name": "shiny-react-hello-world",
  "version": "1.0.0",
  "type": "module",
  "description": "Hello World app using shiny-react",
  "scripts": {
    "build": "concurrently \"npm run build-r\" \"npm run build-py\" \"tsc --noEmit\"",
    "watch": "concurrently \"npm run watch-r\" \"npm run watch-py\" \"tsc --noEmit --watch\"",
    "build-r": "esbuild srcts/main.tsx --bundle --outfile=r/www/main.js --format=esm --minify --alias:react=react",
    "watch-r": "esbuild srcts/main.tsx --bundle --outfile=r/www/main.js --format=esm --minify --alias:react=react --watch",
    "build-py": "esbuild srcts/main.tsx --bundle --outfile=py/www/main.js --format=esm --minify --alias:react=react",
    "watch-py": "esbuild srcts/main.tsx --bundle --outfile=py/www/main.js --format=esm --minify --alias:react=react --watch",
    "clean": "rm -rf r/www py/www"
  },
  "author": "Winston Chang",
  "license": "MIT",
  "devDependencies": {
    "@posit/shiny": "^1.11.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.0.1",
    "esbuild": "^0.25.9",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@posit/shiny-react": "^0.0.6"
  }
}
