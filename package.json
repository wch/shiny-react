{
  "name": "shiny-react",
  "version": "0.0.5",
  "description": "React bindings for Shiny applications (R and Python)",
  "author": "Winston Chang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wch/shiny-react.git"
  },
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "module": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist/",
    "examples/",
    "!**/__pycache__/"
  ],
  "scripts": {
    "build": "tsx build.ts",
    "watch": "tsx build.ts --watch",
    "build-prod": "tsx build.ts --production",
    "watch-prod": "tsx build.ts --production --watch"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react-dom": "^19.1.7",
    "@types/rstudio-shiny": "git+https://git@github.com/rstudio/shiny.git#v1.11.1",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.21.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
