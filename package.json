{
  "name": "shiny-react-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for shiny-react packages (JavaScript, R, and Python)",
  "private": true,
  "workspaces": [
    "js"
  ],
  "scripts": {
    "build": "./scripts/build.sh",
    "dev": "./scripts/dev.sh",
    "build:js": "cd js && npm run build",
    "build:js:prod": "cd js && npm run build-prod",
    "watch:js": "cd js && npm run watch",
    "build:examples": "tsx build.ts",
    "watch:examples": "tsx build.ts --watch",
    "build:examples:prod": "tsx build.ts --production",
    "watch:examples:prod": "tsx build.ts --production --watch"
  },
  "author": "Winston Chang",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.5",
    "@types/node": "^22.15.3",
    "@types/react-dom": "^19.1.3",
    "@types/rstudio-shiny": "git+https://git@github.com/rstudio/shiny.git#v1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "esbuild": "^0.25.3",
    "esbuild-plugin-tailwindcss": "^2.0.1",
    "lucide-react": "^0.507.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.5",
    "tsx": "^4.19.4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.1",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slider": "^1.3.4",
    "@radix-ui/react-slot": "^1.2.1"
  }
}
