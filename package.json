{
  "name": "shiny-react",
  "version": "0.0.1",
  "description": "React bindings for Shiny applications (R and Python)",
  "author": "Winston Chang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wch/shiny-react.git"
  },
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/",
    "bin/",
    "examples/"
  ],
  "bin": {
    "create-shiny-react-app": "./bin/create-shiny-react-app.js"
  },
  "scripts": {
    "build": "tsx build.ts",
    "watch": "tsx build.ts --watch",
    "build-prod": "tsx build.ts --production",
    "watch-prod": "tsx build.ts --production --watch"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react-dom": "^19.1.7",
    "@types/rstudio-shiny": "git+https://git@github.com/rstudio/shiny.git#v1.11.1",
    "esbuild": "^0.25.9",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
